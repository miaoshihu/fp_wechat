/**index.wxss**/
.root {
  width: 100%;
  height: 100%;
  background-color: #FFF;
}

.list-item {
  width: 690rpx;
  height: 250rpx;
  flex-direction: row;
  display: flex;
  position: relative;
  color: #999;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-top: 1px #f0f0f0 solid;
}

.left_con {
  width: 240rpx;
  height: 194rpx;
  margin-top: 30rpx;
}

.right_con {
  width: 450rpx;
  height: 194rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  /* background-color: #0ff; */
}

.right_con_title1 {
  width: 100%;
  height: 50rpx;
  /* background-color: #985; */
  display: flex;
}

.right_con_title2 {
  width: 100%;
  height: 100rpx;
  /* background-color: #097; */
  display: flex;
  align-items: center;
}

.right_con_title3 {
  width: 100%;
  height: 44rpx;
  display: flex;
  /* background-color: #0f7; */
}

.right_con_title3_left {
  display: flex;
  width: 60%;
}

.title1 {
  font-size: 32rpx;
  width: 70%;
  color: #000;
  /* background-color: #00ff00; */
}

.price {
  display: flex;
  width: 30%;
  font-size: 32rpx;
  justify-content: flex-end;
  color: #f00;
}

.short_desc {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  max-lines: 2;
  /* background-color: #ff5500; */
}

.address {
  /* background-color: #0f0; */
  font-size: 24rpx;
  align-self: center;
  color: #000;
}

.user {
  /* background-color: #0ff; */
  font-size: 24rpx;
  margin-left: 20rpx;
  align-self: center;
}

.time {
  display: flex;
  /* background-color: #ff0; */
  width: 40%;
  justify-content: flex-end;
  font-size: 24rpx;
  align-self: center;
}

.image {
  width: 100%;
  height: 100%;
  background-color: #eee;
}
